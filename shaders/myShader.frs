#version 330 core
in vec3 myColor;
in vec2 myTexCoord;

out vec4 color;

uniform sampler2D myTexture1;
uniform sampler2D myTexture2;
uniform float mySaturation;

void main() {
    color = mix(texture(myTexture1, myTexCoord), texture(myTexture2, myTexCoord * 2), 0.2) * (mySaturation * (vec4(myColor, 1.0f) - 1) + 1);
}
